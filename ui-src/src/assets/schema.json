    "allowableServiceResponseTimeVariance": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "testSuite": {
      "type": "string",
      "enum": [
        "Default-1",
        "Default-2",
        "Default-3"
      ]
    },
    "requestDelay": {
      "type": "integer",
      "minimum": 1
    },
    "TPSFreq": {
      "type": "integer",
      "minimum": 1
    },
    "rampUsers": {
      "type": "integer",
      "minimum": 1
    },
    "rampDelay": {
      "type": "integer",
      "minimum": 0
    },
    "testCaseDir": {
      "type": "string"
    },
    "testSuiteDir": {
      "type": "string"
    },
    "baseStatsOutputDir": {
      "type": "string"
    },
    "reportOutputDir": {
      "type": "string"
    }
  },
