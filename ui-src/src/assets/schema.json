      "type": "string"
    },
    "targetPort": {
      "type": "string",
      "minimum": 1,
      "maximum": 65535
    },
    "memoryEndpoint": {
      "type": "string"
    },
    "numIterations": {
      "type": "integer",
      "minimum": 1
    },
    "concurrentUsers": {
      "type": "integer",
      "minimum": 1
