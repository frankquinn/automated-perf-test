{
  "type": "object",
  "required": [
    "apiName",
    "targetHost",
    "targetPort",
    "numIterations",
    "concurrentUsers",
    "allowablePeakMemoryVariance",
    "allowableServiceResponseTimeVariance",
    "testSuite",
